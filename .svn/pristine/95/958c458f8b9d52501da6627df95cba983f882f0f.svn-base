<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9C27B0">

    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:backgroundTint="#673AB7"
        android:contentDescription="flex"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bgimagetwo" />

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        android:backgroundTint="#000E0C0C"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quote"
            android:layout_width="263dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="280dp"
            android:textColor="#Ffff"
            android:textSize="20sp"
            android:padding="15dp"
            android:background="@color/background_odd_transparent"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_letsgetit"
            android:layout_width="177dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="133dp"
            android:layout_marginEnd="99dp"
            android:layout_marginBottom="39dp"
            android:background="@color/launcher_background"
            android:textColor="@color/background"
            android:text="@string/getstarted"
           />
    </RelativeLayout>

</FrameLayout>