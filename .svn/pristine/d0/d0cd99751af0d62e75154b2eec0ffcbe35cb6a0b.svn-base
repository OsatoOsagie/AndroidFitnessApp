<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        android:padding="15dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/macroNutrient_IMV"
            android:contentDescription="fruits"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/macroNutrient_name"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/macroNutrient_IMV"
            android:layout_toRightOf="@+id/macroNutrient_IMV"
            android:textColor="#333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"></TextView>


        <TextView
            android:id="@+id/macroNutrient_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/macroNutrient_name"
            android:layout_marginStart="207dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/macroNutrient_IMV"
            android:textAlignment="center"
            android:textColor="#333"
            android:textSize="15sp"></TextView>
    </RelativeLayout>
</LinearLayout>
